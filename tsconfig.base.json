{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": ["es2018", "es2019", "dom"],
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "rootDir": ".",
    "paths": {
      "@blockparty/shared/data-access/device-storage": [
        "libs/shared/data-access/device-storage/src/index.ts"
      ],
      "@blockparty/shared/services/app-update-service": [
        "libs/shared/services/app-update-service/src/index.ts"
      ],
      "@blockparty/shared/types": ["libs/shared/types/src/index.ts"],
      "@distortion/*": ["apps/distortion/src/*"],
      "@shared/data-access/supabase": [
        "libs/shared/data-access/supabase/src/index.ts"
      ],
      "@shared/environments": ["libs/shared/enviroments/src/index.ts"],
      "@tweak/*": ["apps/tweak/src/app/*"],
      "libs/tweak/shared/image-cropper": [
        "libs/tweak/shared/image-cropper/src/index.ts"
      ],
      "libs/tweak/shared/image-upload": [
        "libs/tweak/shared/image-upload/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
